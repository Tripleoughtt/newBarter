block add modal
  #addModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='itemName itemDescription emptyFormWarn tryAgain saveNewItem', area-describedby='add new items here')
    .modal-dialog.modal-lg(role='document')
      .modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal', aria-label='Close')
            span(aria-hidden='true') Ã—
          h4.modal-title Add new item
        .modal-body
          .row
            form.form-horizontal
              .row.form-group
                label.col-sm-4.control-label(for='username') Item
                .col-sm-4
                  input#itemName.form-control(type='text', placeholder='Item', autofocus)
              .row.form-group
                label.col-sm-4.control-label(for='text') Description
                .col-sm-4
                  input#itemDescription.form-control(type='text', placeholder='description')
              #emptyFormWarn.warning.message All fields must be filled
              #tryAgain.warning.message Error.  Please try again.
        .modal-footer
          button.cancel.btn.btn-default(type='button', data-dismiss='modal') Cancel
          button#saveNewItem.btn.btn-primary(type='button') Save
